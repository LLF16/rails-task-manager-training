<ul>
  <% @tasks.each do |task| %>
  <li>
    <% if task.completed %>
      <i class="fas fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <h3>
      <%= link_to task.title, task_path(task)  %>
    </h3>
  </li>
  <% end %>
</ul>

<%= link_to 'New task', new_task_path  %>
